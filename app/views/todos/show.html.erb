<!-- app/views/todos/show.html.erb -->
<div class="container my-4">
  <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Todo List</a>
      <div class="d-flex">
        <% if user_signed_in? %>
          <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: "btn btn-outline-danger" %>
        <% end %>
      </div>
    </div>
  </nav>

  <div class="mt-5 pt-5">
    <h2>Todo Details</h2>
    
    <div class="mb-3">
      <strong>Task:</strong>
      <p><%= @todo.title %></p>
    </div>
    
    <div class="mb-3">
      <strong>Status:</strong>
      <span class="badge <%= @todo.completed? ? 'bg-success' : 'bg-warning' %>">
        <%= @todo.status.humanize %>
      </span>
    </div>

    <div>
      <%= link_to 'Back to Todos', root_path, class: 'btn btn-secondary' %>
    </div>
  </div>
</div>
